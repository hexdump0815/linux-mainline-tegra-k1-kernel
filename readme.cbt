# directories:
# - /compile/doc/stable-tg - the files in this dir
# - /compile/source/linux-stable-tg - the kernel sources checked out from gitrepo
# - /compile/result/stable-tg - the resulting kernel, modules etc. tar.gz files
# name: stb-cbt

# based on https://github.com/reey/PKGBUILDs.git - core/linux-nyan/PKGBUILD
# IMPORTANT: this is work in progress and not yet ready to use!
# see misc.cbt: pulse default.pa required
# (not required: and mrvl firmware needs to go into the initramfs via hook)

# patches:
#patch -p1 < /compile/doc/stable-tg/misc.cbt/tegra-cbt-blank-screen-fix.patch
patch -p1 < /compile/doc/stable-tg/misc.cbt/PKGBUILDs/core/linux-nyan/enable-cec-for-nyan.patch
patch arch/arm/boot/dts/tegra124-nyan.dtsi /compile/doc/stable-tg/misc.cbt/PKGBUILDs/core/linux-nyan/enable-CPU-freq.patch
cp /compile/doc/stable-tg/misc.cbt/PKGBUILDs/core/linux-nyan/nyan-big_defconfig arch/arm/configs/nyan-big_defconfig

cp /compile/doc/stable-tg/config.cbt /compile/source/linux-stable-tg/.config
cd /compile/source/linux-stable-tg

export ARCH=arm
# make nyan-big_defconfig + fix options - see misc.cbt/options
make oldconfig
make -j 4 bzImage dtbs modules
cd tools/perf
make
cd ../power/cpupower
make
cd ../../..
export kver=`make kernelrelease`
echo ${kver}
# remove debug info if there and not wanted
# find . -type f -name '*.ko' | sudo xargs -n 1 objcopy --strip-unneeded
make modules_install
mkdir -p /lib/modules/${kver}/tools
cp -v tools/perf/perf /lib/modules/${kver}/tools
cp -v tools/power/cpupower/cpupower /lib/modules/${kver}/tools
cp -v tools/power/cpupower/libcpupower.so.0.0.1 /lib/modules/${kver}/tools/libcpupower.so.0
# make headers_install INSTALL_HDR_PATH=/usr
cp -v .config /boot/config-${kver}
cp -v arch/arm/boot/zImage /boot/zImage-${kver}
mkdir -p /boot/dtb-${kver}
cp -v arch/arm/boot/dts/tegra124-nyan-big.dtb /boot/dtb-${kver}/tegra124-nyan-big.dtb
cp -v System.map /boot/System.map-${kver}
# start chromebook special
cp ../../doc/stable-tg/misc.cbt/kernel-nyan.its-stable-tg kernel.its
mkimage -D "-I dts -O dtb -p 2048" -f kernel.its vmlinux.uimg
dd if=/dev/zero of=bootloader.bin bs=512 count=1
cp ../../doc/chromebook/misc.cbt/tegra-PKGBUILDs/core/linux-nyan/kernel.keyblock .
cp ../../doc/chromebook/misc.cbt/tegra-PKGBUILDs/core/linux-nyan/kernel_data_key.vbprivk .
cp ../../doc/stable-tg/misc.cbt/cmdline-stable-tg cmdline
cp /etc/cb-tools/libcrypto.so.1.1 /usr/lib
/etc/cb-tools/vbutil_kernel --pack vmlinux.kpart --version 1 --vmlinuz vmlinux.uimg --arch arm --keyblock kernel.keyblock --signprivate kernel_data_key.vbprivk --config cmdline --bootloader bootloader.bin
cp -v vmlinux.kpart /boot/vmlinux.kpart-${kver}
# mkdir -p /lib/firmware/mrvl
# cp ../../doc/chromebook/misc/sd8787_uapsta_cros.bin /lib/firmware/mrvl
# cp ../../doc/chromebook/misc/sd8797_uapsta_cros.bin /lib/firmware/mrvl
# cp ../../doc/chromebook/misc/sd8897_uapsta_cros.bin /lib/firmware/mrvl
# install -D -m644 ../../doc/chromebook/misc.cbt/coreboot/src/soc/nvidia/tegra124/lp0/tegra_lp0_resume.fw /lib/firmware/tegra12x/tegra_lp0_resume.fw
# end chromebook special
cd /boot
update-initramfs -c -k ${kver}
mkimage -A arm -O linux -T ramdisk -a 0x0 -e 0x0 -n initrd.img-${kver} -d initrd.img-${kver} uInitrd-${kver}
tar cvzf /compile/source/linux-stable-tg/${kver}.tar.gz /boot/*-${kver} /lib/modules/${kver}
cp -v /compile/doc/stable-tg/config.cbt /compile/doc/stable-tg/config.cbt.old
cp -v /compile/source/linux-stable-tg/.config /compile/doc/stable-tg/config.cbt
cp -v /compile/source/linux-stable-tg/.config /compile/doc/stable-tg/config.cbt-${kver}
cp -v /compile/source/linux-stable-tg/*.tar.gz /compile/result/stable-tg
# start chromebook special
cd /compile/source/linux-stable-tg
rm -f /usr/lib/libcrypto.so.1.1
rm -f firmware/nvidia/tegra124/xusb.bin
rm -f kernel.its vmlinux.uimg bootloader.bin kernel.keyblock kernel_data_key.vbprivk cmdline vmlinux.kpart
# end chromebook special


#
# extlinux.conf entry
#
TIMEOUT 30
DEFAULT v545

MENU TITLE nyan big chromebook boot options

LABEL v5431
      MENU LABEL v5.4.31 kernel
      LINUX ../boot/zImage-5.4.31-ntg-cbt
      INITRD ../boot/initrd.img-5.4.31-ntg-cbt
      FDT ../boot/rk3288-veyron-jaq.dtb-5.4.31-ntg-cbt
      APPEND console=tty1 init=/sbin/init gpt root=/dev/mmcblk2p3 ro rootwait net.ifnames=0 fsck.repair=yes
